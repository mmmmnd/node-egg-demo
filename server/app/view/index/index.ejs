<%- include('/commom/header',{
  site_title:settingsList?settingsList.site_title:"海南昆仑体育文化股份有限公司",
  Keywords:settingsList?settingsList.keywords:"海南昆仑体育文化股份有限公司",
  description:settingsList?settingsList.description:"海南昆仑体育文化股份有限公司",
}) %>

<%- include('/commom/indexBanner') %>

<div class="content-full">
  <div class="content-full row1">
    <div class="row1-bg"></div>
    <div class="content row1-main">
      <div class="col-lg-6 row1-left">
        <div class="row-title">
          <div class="title-link"></div>
          <h5>关于我们</h5>
        </div>
        <h3 class="row-h3">大海之南•昆仑为巅</h3>
        <p class="row-p"><%= aboutSingleDetail.description %></p>
        <a href="/about/pid/1/cid/2" class="row-btn">查看详情</a>
      </div>
      <div class="col-lg-6 row1-right">
        <img src="" alt="" class="about-img" data-src="/public/images/about.png">
      </div>
    </div>
  </div>
  <div class="content-full row2">
    <div class="col-lg-2 row2-left">
      <div class="row-title">
        <div class="title-link"></div>
        <h5>服务领域</h5>
      </div>
      <div class="ser-nav">
        <ul>
          <% menuList[1].children.forEach(item=>{ %>
          <li>
            <a href="/<%= item.url+'/pid/'+7+'/cid/'+item.id %>"><%= item.title %></a>
          </li>
          <% }) %>
        </ul>
      </div>

      <div class="banner-button row2-button">
        <div class="swiper-button-next swiper-button-next3"></div>
        <span class="banner-button-link">|</span>
        <div class="swiper-button-prev swiper-button-prev3"></div>
      </div>
    </div>
    <div class="row2-right">
      <div class="swiper-container row2-swiper">
        <div class="swiper-wrapper row2-wrapper">
          <% servicesList.forEach((item,index)=>{ %>
          <div class="swiper-slide">
            <div class="row2-txt">
              <h5><%= menuList[1].children[index].title %></h5>
              <p><%= item.description %></p>
              <a href="/services/pid/7/cid/<%= item.category_id %>" class="row2-btn">
                <img src="/public/images/more_icon.png" alt="">
              </a>
            </div>
            <div class="row2-border"></div>
            <img src="" alt="" class="row2-img" data-src="<%= item.image %>">
          </div>
          <% }) %>
        </div>
      </div>
    </div>
  </div>
  <div class="content-full row3">
    <div class="content">
      <div class="row-top">
        <div class="row-title">
          <div class="title-link"></div>
          <h5>新闻中心</h5>
        </div>
        <a href="/news/pid/21/cid/22" class="more-btn">查看更多<img src="" alt=""
            data-src="/public/images/more_icon2.png"></a>
      </div>
      <div class="row3-swiper">
        <div class="swiper-wrapper">
          <% newsList.forEach((item,index) =>{ %>
          <div class="swiper-slide row3-slide">
            <a href="news_info/pid/21/cid/<%= item.category_id %>/id/<%= item.id %>">
              <div class="row3-img">
                <% menutitle = menuList[4].children.find(menuItem => { if( menuItem.id === item.category_id ) return menuItem }) %>
                <span class="news-tab"><%= menutitle.title %></span>
                <img src="" alt="" data-src="<%= item.filepath %>">
              </div>
              <div class="row3-txt">
                <h5><%= item.cultureTitle %></h5>
                <p><%= item.description %></p>
                <div class="row3-data">
                  <p><%= moment(item.created_at).format('YYYY-MM-DD') %></p>
                  <img src="" alt="" data-src="/public/images/news_icon.png">
                </div>
              </div>
            </a>
          </div>
          <% }) %>
        </div>
      </div>
    </div>
    <div class="banner-button row3-button">
      <div class="swiper-button-next swiper-button-next4"></div>
      <span class="banner-button-link">|</span>
      <div class="swiper-button-prev swiper-button-prev4"></div>
    </div>
  </div>
  <div class="content-full row4">
    <div class="content row-top">
      <div class="row-title">
        <div class="title-link"></div>
        <h5>服务案例</h5>
      </div>
      <a href="/cases/pid/25/cid/26" class="more-btn">查看更多<img src="" alt=""
          data-src="/public/images/more_icon3.png"></a>
    </div>

    <div class="row4-swiper">
      <div class="swiper-wrapper">
        <% casesDetail.forEach(item =>{ %>
        <div class="swiper-slide row4-slide">
          <a href="/cases_info/pid/25/cid/<%= item.category_id %>/id/<%= item.id %>">
            <img src="" alt="" class="row4-img" data-src="<%= item.filepath %>">
            <div class="row4-txt">
              <h5><%= item.cultureTitle %></h5>
              <p><%= moment(item.created_at).format('YYYY-MM-DD') %></p>
            </div>
            <div class="row4-mask"></div>
          </a>
        </div>
        <% }) %>
      </div>
      <div class="swiper-pagination swiper4-pagination"></div>
    </div>
  </div>
  <div class="content-full row5">
    <div class="content">
      <div class="row-top">
        <div class="row-title">
          <div class="title-link"></div>
          <h5>合作伙伴</h5>
        </div>
        <a href="/cases/pid/25/cid/27" class="more-btn">查看更多<img src="/public/images/more_icon2.png" alt=""></a>
      </div>
      <h3 class="row5-title">公司汇集来自体育、传媒、广告、<br>会展行业的精英人士</h3>
      <p class="row5-txt">与中视体育娱乐有限公司、爱奇艺、中广天择传媒股份有限公司等国内一流媒体平台达成了战略合作关系</p>
      <div class="row5-list">
        <ul>
          <% casesInfo.forEach(item =>{ %>
          <li>
            <a href="javascript:;">
              <img src="" alt="" data-src="<%= item.filepath %>">
            </a>
          </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </div>
  <div class="content-full row6">
    <a href="javascript:;" class="video-btn" data-toggle="modal" data-target="#videos">
      <img src="" alt="" data-src="/public/images/play_icon.png">
    </a>
    <img src="" alt="" class="video-img" data-src="/public/images/video_bg.png">
    <div class="modal fade" id="videos" tabindex="-1" role="dialog" aria-labelledby="myVideos">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                aria-hidden="true">&times;</span></button>
            <h4 class="modal-title" id="myVideos">公司宣传视频</h4>
          </div>
          <div class="modal-body">
            <video id="video" poster="/public/images/video_bg.png" controls="controls" autoplay="autoplay"
              src="<%= settingsList.mp4 %>" />
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="content-full row7">
    <div class="content">
      <div class="row-top">
        <div class="row-title">
          <div class="title-link"></div>
          <h5>联系我们</h5>
        </div>
        <a href="/contact/pid/7/cid/32" class="more-btn">查看更多<img src="" alt=""
            data-src="/public/images/more_icon2.png"></a>
      </div>
      <div class="row7-main">
        <div class="row7-left">
          <div class="cont-top">
            <div class="row7-icon">
              <a href="contact2.html" class="cont-icon"><img src="" alt="" data-src="/public/images/mes_icon.png"></a>
              <a href="javascript:;" class="cont-icon cont-hover">
                <img src="" alt="" data-src="/public/images/weibo_icon.png">
                <img src="" alt="" class="qrcode-img" data-src="<%= settingsList.weiboCode %>">
              </a>
              <a href="javascript:;" class="cont-icon cont-hover">
                <img src="" alt="" data-src="/public/images/wechat_icon.png">
                <img src="" alt="" class="qrcode-img" data-src="<%= settingsList.weChatCode %>">
              </a>
              <a href="javascript:;" class="cont-icon"><img src="" alt="" data-src="/public/images/qq_icon.png"></a>
            </div>
            <h5 class="row7-h5"><%= settingsList.companyName %></h5>
          </div>
          <div class="cont-bottom row">
            <div class="col-lg-6">
              <h4>联系方式</h4>
              <p><%= settingsList.phone %></p>
              <p><%= settingsList.email %></p>
            </div>
            <div class="col-lg-6">
              <h4>详细地址</h4>
              <p><%= settingsList.address %></p>
            </div>
          </div>
        </div>
        <div class="row7-right">
          <div id="map"></div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('/commom/footer') %>