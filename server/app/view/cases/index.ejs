<%- include('/commom/header',{
  site_title:casesList?casesList.data[0].site_title:"11海南昆仑体育文化股份有限公司",
  Keywords:casesList?casesList.data[0].keywords:"海南昆仑体育文化股份有限公司",
  description:casesList?casesList.data[0].description:"海南昆仑体育文化股份有限公司",
}) %>
<%- include('/commom/banner') %>

<div class="content-full">
  <div class="content main-info">

    <%- include('/commom/column') %>
    <div class="content-right">
      <% if(ctx.params.cid === '26'){ %>
        <div class="case-list">
          <ul>
            <% casesList.data.forEach(item=>{ %>
              <% if(item.category_id == '26'){ %>
                <li class="row4-slide">
                  <a href="<%= urlInfo +'/id/'+ item.id %>">
                    <% var menutitle = casesDroptypeList.find(Droptype => Droptype.id == item.product_id ) %>
                    <span><%= menutitle.title %></span>
                    <img src="" alt="" class="row4-img" data-src="<%= item.image %>">
                    <div class="ser-info-txt">
                      <h5><%= item.title %></h5>
                      <p><%= moment(item.created_at).format('YYYY-MM-DD')%></p>
                    </div>
                  </a>
                </li>
              <% } %>
            <% }) %>
          </ul>
        </div>
      <% }else{ %>
        <div class="row5-list case2-list">
          <ul>
            <% casesList.data.forEach(item=>{ %>
              <% if(item.category_id == '27'){ %>
              <li>
                <a href="javascript:;">
                  <img src="" alt="" data-src="<%= item.image %>">
                </a>
              </li>
              <% } %>
            <% }) %>
          </ul>
        </div>
      <% } %>
    </div>
    <%- include('/commom/page',{ url }) %>
  </div>
</div>

<%- include('/commom/serInfo') %>

<%- include('/commom/footer') %>