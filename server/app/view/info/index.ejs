<%- include('/commom/header',{
  site_title:papeInfo?papeInfo.current.site_title:"11海南昆仑体育文化股份有限公司",
  Keywords:papeInfo?papeInfo.current.keywords:"海南昆仑体育文化股份有限公司",
  description:papeInfo?papeInfo.current.description:"海南昆仑体育文化股份有限公司",
}) %>

<%- include('/commom/banner') %>

<div class="content-full">
  <div class="content main-info">

    <%- include('/commom/column') %>

    <div class="content-right">
      <div class="main-info">
        <div class="news-info-top">
          <h3 class="news-title"><%= papeInfo.current.title %></h3>
          <div class="news-link"></div>
          <span>来源：<em>本站</em> 时间：<em><%= moment(papeInfo.current.created_at).format('YYYY-MM-DD') %></em>
            浏览：<em><%= papeInfo.current.click %></em></span>
        </div>
        <div class="news-txt">
          <%- papeInfo.current.content %>
        </div>
        <div class="news-info-bottom">
          <% if(papeInfo.previous){ %>
          <a href="<%= urlInfo + '/id/'+papeInfo.previous.id %>">上一篇：<span><%= papeInfo.previous.title %></span></a>
          <% }else{ %>
          <a href="javascript:;" class="disabled">上一篇：<span>暂无</span></a>
          <% } %>
          <% if(papeInfo.next){ %>
          <a href="<%= urlInfo + '/id/'+papeInfo.next.id %>">下一篇：<span><%= papeInfo.next.title %></span></a>
          <% }else{ %>
          <a href="javascript:;" class="disabled">下一篇：<span>暂无</span></a>
          <% } %>
        </div>
      </div>
    </div>
  </div>
</div>
<%- include('/commom/serInfo') %>

<%- include('/commom/footer') %>