<%- include('/commom/header',{
  site_title:settingsList?settingsList.site_title:"海南昆仑体育文化股份有限公司",
  Keywords:settingsList?settingsList.keywords:"海南昆仑体育文化股份有限公司",
  description:settingsList?settingsList.description:"海南昆仑体育文化股份有限公司",
}) %>
<%- include('/commom/banner') %>

<div class="content-full">
  <div class="content main-info">

    <%- include('/commom/column') %>
    <div class="content-right">
      <% if(ctx.params.cid == 32){ %>
      <div class="row7-main contact-info">
        <div class="row7-left">
          <div class="cont-top">
            <div class="row7-icon">
              <a href="contact2.html" class="cont-icon">
                <img src="" alt="" data-src="/public/images/mes_icon.png">
              </a>
              <a href="javascript:;" class="cont-icon cont-hover">
                <img src="" alt="" data-src="/public/images/weibo_icon.png">
                <img src="" alt="" class="qrcode-img" data-src="<%= settingsList.weChatCode %>">
              </a>
              <a href="javascript:;" class="cont-icon cont-hover">
                <img src="" alt="" data-src="/public/images/wechat_icon.png">
                <img src="" alt="" class="qrcode-img" data-src="<%= settingsList.weChatCode %>">
              </a>
              <a href="javascript:;" class="cont-icon">
                <img src="" alt="" data-src="/public/images/qq_icon.png">
              </a>
            </div>
            <h5 class="row7-h5"><%= settingsList.companyName %></h5>
          </div>
          <div class="cont-bottom row">
            <div class="col-lg-6">
              <h4>联系方式</h4>
              <p><%= settingsList.phone %></p>
              <p><%= settingsList.email %></p>
            </div>
            <div class="col-lg-6">
              <h4>详细地址</h4>
              <p><%= settingsList.address %></p>
            </div>
          </div>
        </div>
        <div class="row7-right">
          <div id="map"></div>
        </div>
      </div>
      <% }else{ %>
      <form action="" class="cont-mes">
        <div class="row">
          <div class="form-group col-lg-4">
            <label>姓名</label>
            <input type="text" class="form-control" placeholder="请输入姓名" name="name">
          </div>
          <div class="form-group col-lg-4">
            <label>电话</label>
            <input type="text" class="form-control" placeholder="请输入电话" name="phone">
          </div>
          <div class="form-group col-lg-4">
            <label>邮箱</label>
            <input type="text" class="form-control" placeholder="请输入邮箱" name="email">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-lg-12">
            <label>标题</label>
            <input type="text" class="form-control" placeholder="请输入标题" name="title">
          </div>
        </div>
        <div class="row">
          <div class="form-group col-lg-12">
            <label>内容</label>
            <textarea class="form-control" rows="5" name="remarks" placeholder="请输入内容"></textarea>
          </div>
        </div>
        <div class="row">
          <div class="col-lg-12">
            <label>验证码</label>
          </div>
          <div class="form-group col-lg-6">
            <div class="form-group col-lg-4 yzm-input">
              <input type="text" class="form-control" placeholder="请输入计算结果" name="captcha">
            </div>
            <div class="form-group col-lg-4 yzm-img">
              <img src="" onclick="this.src='/captcha?height=38&amp;width=137&amp;fontSize=50&amp;'+Math.random();"
                data-src="/captcha?height=38&amp;width=137&amp;fontSize=50">
            </div>
            <div class="form-group col-lg-4">
              <a href="javascript:;" class="mes-btn" id="mes-btn">提交</a>
            </div>
          </div>
        </div>
      </form>
      <% } %>
    </div>
  </div>
</div>
<%- include('/commom/serInfo') %>

<%- include('/commom/footer') %>